{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@stackday/ui": ["../../packages/ui/src"],
      "@stackday/shared-types": ["../../packages/shared-types/src"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
